<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.password">123456789</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/drogaria</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.format_sql">false</property>
		<property name="hbm2ddl.auto">validate</property>

		<mapping class="br.edu.mk.drogaria.domain.Estado"/>
		<mapping class="br.edu.mk.drogaria.domain.Fabricante"/>
		<mapping class="br.edu.mk.drogaria.domain.Cidade"/>
		<mapping class="br.edu.mk.drogaria.domain.Cliente"/>
		<mapping class="br.edu.mk.drogaria.domain.Funcionario"/>
		<mapping class="br.edu.mk.drogaria.domain.ItemVenda"/>
		<mapping class="br.edu.mk.drogaria.domain.Pessoa"/>
		<mapping class="br.edu.mk.drogaria.domain.Produto"/>
		<mapping class="br.edu.mk.drogaria.domain.Usuario"/>
		<mapping class="br.edu.mk.drogaria.domain.Venda"/>
		
	</session-factory>
</hibernate-configuration>